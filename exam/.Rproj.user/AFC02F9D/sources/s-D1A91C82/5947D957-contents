df.long = melt(df)

g = ggplot(df.long,aes(Username,value,fill=variable))+
  geom_bar(stat='identity', width=0.8, position = position_dodge(width=0.7)) + 
  theme(axis.text.x = element_text(angle = 90)) +
  scale_y_continuous(labels = scales::percent) +
  ylab("Word Used (Precentage)") + ggtitle("First-person Singular vs. Plural References") +
  ggsave("mtcars.png", width = 15, height = 4)


